{
  "name": "lds-imgx",
  "version": "0.1.0",
  "description": "Fast image resize & convert CLI (Sharp-powered)",
  "type": "module",
  "bin": {
    "imgx": "dist/cli.mjs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "echo \"(add eslint later)\"",
    "test": "vitest run",
    "prepare": "npm run build"
  },
  "keywords": [
    "images",
    "sharp",
    "resize",
    "webp",
    "avif",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "commander": "^13.1.0",
    "globby": "^14.0.0",
    "p-limit": "^5.0.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
